# Job Pricing Engine - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/job_pricing_db

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-key-here

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here

# Feature Flags
ENABLE_MERCER=true
ENABLE_MCF=true
ENABLE_GLASSDOOR=true
ENABLE_HRIS=true
ENABLE_APPLICANTS=true

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIM=1536
EMBEDDING_CACHE_TTL_HOURS=720

# Mercer Configuration
MERCER_SIMILARITY_THRESHOLD=0.40
MERCER_USE_LLM_REASONING=false
MERCER_WEIGHT=0.40

# Source Weights
MCF_WEIGHT=0.25
GLASSDOOR_WEIGHT=0.15
HRIS_WEIGHT=0.15
APPLICANTS_WEIGHT=0.05
