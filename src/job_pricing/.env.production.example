# ==============================================================================
# PRODUCTION Environment Variables
# ==============================================================================
# Copy this file to .env.production and fill in production values
# NEVER commit .env.production to version control!
# ==============================================================================

# ==============================================================================
# Application
# ==============================================================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

APP_NAME="Job Pricing Engine"
APP_VERSION="1.0.0"

# Secret key for signing tokens (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32

# ==============================================================================
# API Configuration
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://yourdomain.com

# ==============================================================================
# Database (PostgreSQL)
# ==============================================================================
POSTGRES_DB=job_pricing_db_prod
POSTGRES_USER=job_pricing_user_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==============================================================================
# Redis Cache
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ==============================================================================
# OpenAI API
# ==============================================================================
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ==============================================================================
# CORS Settings
# ==============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# Celery (Task Queue)
# ==============================================================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ==============================================================================
# Monitoring & Logging
# ==============================================================================
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_ENVIRONMENT=production

# ==============================================================================
# Email (Optional)
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ==============================================================================
# Security Notes:
#
# 1. All passwords should be at least 32 characters
# 2. Use a password manager to generate strong passwords
# 3. Never use default/example passwords
# 4. Rotate credentials regularly
# 5. Use environment-specific credentials
# ==============================================================================
