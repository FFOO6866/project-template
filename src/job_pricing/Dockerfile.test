# ==============================================================================
# Dockerfile.test - Job Pricing Engine Test Environment
# ==============================================================================
# Extends production Dockerfile with test dependencies
# ==============================================================================

FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_SYSTEM_PYTHON=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    postgresql-client \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# ==============================================================================
# Builder Stage - Install ALL dependencies (production + test)
# ==============================================================================
FROM base as builder

# Install UV (fast Python package installer)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files
COPY pyproject.toml requirements.txt* ./

# Create virtual environment and install ALL dependencies (production + test)
RUN uv venv /opt/venv && \
    uv pip install --python /opt/venv/bin/python \
    # Core dependencies
    fastapi>=0.104.1 \
    uvicorn[standard]>=0.24.0 \
    pydantic>=2.5.0 \
    pydantic-settings>=2.1.0 \
    python-multipart>=0.0.6 \
    sqlalchemy>=2.0.23 \
    psycopg2-binary>=2.9.9 \
    alembic>=1.12.1 \
    asyncpg>=0.29.0 \
    pgvector>=0.2.3 \
    redis>=5.0.1 \
    hiredis>=2.2.3 \
    openai>=1.3.0 \
    tiktoken>=0.5.1 \
    celery>=5.3.4 \
    kombu>=5.3.4 \
    selenium>=4.15.0 \
    beautifulsoup4>=4.12.2 \
    lxml>=4.9.3 \
    webdriver-manager>=4.0.1 \
    pandas>=2.1.3 \
    openpyxl>=3.1.2 \
    numpy>=1.26.2 \
    xlrd>=2.0.1 \
    python-jose[cryptography]>=3.3.0 \
    passlib[bcrypt]>=1.7.4 \
    bcrypt>=4.1.1 \
    httpx>=0.25.1 \
    requests>=2.31.0 \
    python-dotenv>=1.0.0 \
    python-dateutil>=2.8.2 \
    pytz>=2023.3 \
    email-validator>=2.1.0 \
    structlog>=23.2.0 \
    sentry-sdk>=1.38.0 \
    # Test dependencies
    pytest>=7.4.3 \
    pytest-asyncio>=0.21.1 \
    pytest-cov>=4.1.0 \
    pytest-mock>=3.12.0 \
    faker>=20.0.3

# ==============================================================================
# Test Stage
# ==============================================================================
FROM base as test

# Copy installed packages from builder
COPY --from=builder /opt/venv /opt/venv

# Add virtual environment to PATH
ENV PATH="/opt/venv/bin:$PATH"

# Create app user
RUN useradd -m -u 1000 appuser && \
    mkdir -p /app/data /app/logs /app/src /app/tests && \
    chown -R appuser:appuser /app

# Copy application code
COPY --chown=appuser:appuser src/ /app/src/
COPY --chown=appuser:appuser tests/ /app/tests/
COPY --chown=appuser:appuser alembic/ /app/alembic/
COPY --chown=appuser:appuser alembic.ini /app/

# Switch to app user
USER appuser

# Expose port (for debugging if needed)
EXPOSE 8000

# Default command runs all tests
CMD ["pytest", "tests/", "-v", "--tb=short", "--cov=src.job_pricing", "--cov-report=term-missing"]

# ==============================================================================
# Build Instructions:
#
# Build test image:
#   docker build -f Dockerfile.test -t job-pricing-test:latest .
#
# Run tests with docker-compose:
#   docker-compose --profile test up test
#
# Run tests standalone:
#   docker run --rm --env-file .env job-pricing-test:latest
#
# Run specific test file:
#   docker run --rm --env-file .env job-pricing-test:latest \
#     pytest tests/unit/test_pricing_calculation_service.py -v
#
# ==============================================================================
