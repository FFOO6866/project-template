# Clean Nexus Platform Environment Configuration
# Pure Docker deployment - no Windows dependencies

# Core Nexus Configuration
NEXUS_ENV=production
NEXUS_API_PORT=8000
NEXUS_MCP_PORT=3001
NEXUS_API_HOST=0.0.0.0

# Security Configuration
NEXUS_JWT_SECRET=nexus-production-secret-change-in-production
NEXUS_ENABLE_AUTH=true

# Database Configuration (Docker services)
POSTGRES_PASSWORD=nexus_secure_password_change_in_production
DATABASE_URL=postgresql://nexus_user:nexus_secure_password_change_in_production@postgres:5432/nexus_db

# Redis Configuration (Docker services)
REDIS_URL=redis://redis:6379/0

# Performance Configuration
NEXUS_WORKERS=4
NEXUS_TIMEOUT=300
CACHE_TTL=300
MAX_CONNECTIONS=100

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Docker Build Configuration
BUILD_VERSION=2.0.0-clean
BUILD_DATE=2025-01-05
BUILD_REVISION=clean-docker-deployment

# Optional: Domain configuration for reverse proxy
DOMAIN=localhost

# Optional: SSL configuration
ACME_EMAIL=admin@example.com