# Master Docker Environment Configuration
# No Windows paths - Docker service names only

# Project Configuration
PROJECT_NAME=horme-platform
BUILD_VERSION=1.0.0
BUILD_DATE=2025-08-05
BUILD_REVISION=main
ENVIRONMENT=production

# Service Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
NEXUS_API_PORT=8000
NEXUS_MCP_PORT=3001
NEXUS_METRICS_PORT=9090
MCP_SERVER_PORT=3002
FRONTEND_PORT=3000
CHROMADB_PORT=8001
PROMETHEUS_PORT=9091
GRAFANA_PORT=3100

# Database Configuration
POSTGRES_DB=horme_db
POSTGRES_USER=horme_user
POSTGRES_PASSWORD=horme_secure_password_change_in_production
DATABASE_URL=postgresql://horme_user:horme_secure_password_change_in_production@postgres:5432/horme_db
DATAFLOW_DATABASE_URL=postgresql://horme_user:horme_secure_password_change_in_production@postgres:5432/horme_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Nexus Platform Configuration
NEXUS_ENABLE_API=true
NEXUS_ENABLE_CLI=true
NEXUS_ENABLE_MCP=true
NEXUS_JWT_SECRET=nexus-jwt-secret-change-in-production-256-bits-minimum
NEXUS_API_KEY=nexus-api-key-change-in-production

# AI Services Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.8

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MCP_URL=http://localhost:3001

# Performance Configuration
NEXUS_WORKERS=2
NEXUS_TIMEOUT=300
CACHE_TTL=300
MAX_CONNECTIONS=100
POOL_SIZE=10

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3100
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=100
SECURITY_HEADERS_ENABLED=true

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL=info
GRAFANA_ADMIN_PASSWORD=admin_change_in_production

# Vector Database Configuration (Optional)
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMA_CLIENT_URL=http://chromadb:8000

# Production Optimization
PYTHONOPTIMIZE=1
PYTHONUNBUFFERED=1
WORKERS_PER_CORE=1
MAX_WORKER_CONNECTIONS=1000
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=60