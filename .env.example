# Horme POV Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=horme_db
POSTGRES_USER=horme_user
POSTGRES_PASSWORD=your_secure_postgresql_password_here
POSTGRES_PORT=5433

# Database URL for applications
DATABASE_URL=postgresql://horme_user:your_secure_postgresql_password_here@localhost:5433/horme_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380/0

# =============================================================================
# PGADMIN CONFIGURATION (Optional - for database administration)
# =============================================================================
PGADMIN_EMAIL=admin@horme.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8081

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_key_very_secure_random_string_here
MCP_JWT_SECRET=your_mcp_jwt_secret_key_very_secure_random_string_here

# =============================================================================
# API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# HYBRID RECOMMENDATION ENGINE CONFIGURATION
# =============================================================================
# Algorithm weights (must sum to 1.0)
HYBRID_WEIGHT_COLLABORATIVE=0.25
HYBRID_WEIGHT_CONTENT_BASED=0.25
HYBRID_WEIGHT_KNOWLEDGE_GRAPH=0.30
HYBRID_WEIGHT_LLM_ANALYSIS=0.20

# Collaborative filtering thresholds
CF_MIN_USER_SIMILARITY=0.3
CF_MIN_ITEM_SIMILARITY=0.4

# =============================================================================
# NEO4J KNOWLEDGE GRAPH CONFIGURATION
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
APP_NAME=Horme POV
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket server for real-time chat
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001

# Frontend WebSocket URL (used by React components)
# Development: ws://localhost:8001
# Production: wss://your-domain.com/ws
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8001

# =============================================================================
# DOCKER BUILD CONFIGURATION
# =============================================================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# EMAIL MONITORING CONFIGURATION
# =============================================================================
# Email server for quotation request monitoring
EMAIL_IMAP_SERVER=webmail.horme.com.sg
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=integrum@horme.com.sg
EMAIL_PASSWORD=integrum2@25
EMAIL_USE_SSL=true

# Email polling configuration
EMAIL_POLL_INTERVAL_SECONDS=300
EMAIL_ATTACHMENT_DIR=/app/email-attachments
EMAIL_MAX_ATTACHMENT_SIZE_MB=10

# =============================================================================
# WINDOWS SPECIFIC SETTINGS
# =============================================================================
# Set to 'windows' if running on Windows with WSL2
PLATFORM=windows